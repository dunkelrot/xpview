<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="com.basf.xpview.model.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="com.basf.xpview.model.commands.category"
            id="com.basf.xpview.model.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.basf.xpview.model.commands.sampleCommand"
            class="com.basf.xpview.model.handlers.ImportFileHandler">
      </handler>
      <handler
            class="com.basf.xpview.model.handlers.ImportFileHandler"
            commandId="com.basf.xpview.model.handlers.ImportFileHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.basf.xpview.model.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.basf.xpview.model.toolbars.sampleToolbar">
            <command
                  commandId="com.basf.xpview.model.handlers.ImportFileHandler"
                  icon="icons/disk.png"
                  id="com.basf.xpview.model.toolbars.ImportFileHandler"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
