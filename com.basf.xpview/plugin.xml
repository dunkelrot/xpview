<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.basf.xpview.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="com.basf.xpview.Perspective"
            id="com.basf.xpview.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="com.basf.xpview.plantviewer.views.PlantStructureView"
            id="com.basf.xpview.plantviewer.views.PlantStructureView"
            name="PlantStructureView"
            restorable="true">
      </view>
      <view
            class="com.basf.xpview.plantviewer.views.PropertyView"
            id="com.basf.xpview.plantviewer.views.PropertyView"
            name="PropertyView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.basf.xpview.perspective">
         <view
               closeable="true"
               id="com.basf.xpview.plantviewer.views.PlantStructureView"
               minimized="false"
               ratio="0.5"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="com.basf.xpview.plantviewer.views.PropertyView"
               minimized="false"
               moveable="true"
               ratio="0.3"
               relationship="bottom"
               relative="com.basf.xpview.plantviewer.views.PlantStructureView"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
