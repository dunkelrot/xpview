<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="com.basf.xpview.view2d">
      </category>
      <view
            name="Sample View"
            icon="icons/sample.gif"
            category="com.basf.xpview.view2d"
            class="com.basf.xpview.pidviewer.editors.SampleView"
            id="com.basf.xpview.view2d.views.SampleView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.basf.xpview.view2d.views.SampleView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.basf.xpview.pidviewer.editors.PIDEditor"
            default="false"
            id="com.basf.xpview.pidviewer.editors.PIDEditor"
            name="PIDEditor">
      </editor>
   </extension>

</plugin>
