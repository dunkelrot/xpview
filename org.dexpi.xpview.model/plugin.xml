<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.basf.xpview.model.commands.ExcelReportHandler"
            name="ExcelReportHandler">
      </command>
      <command
            defaultHandler="com.basf.xpview.model.handlers.ImportFileHandler"
            id="com.basf.xpview.model.commands.ImportFileHandler"
            name="ImportFileHandler">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.basf.xpview.model.handlers.ImportFileHandler"
            commandId="com.basf.xpview.model.command.ImportFileHandler">
      </handler>
      <handler
            class="com.basf.xpview.model.handlers.ExcelReportHandler"
            commandId="com.basf.xpview.model.commands.ExcelReportHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.basf.xpview.model.commands.ImportFileHandler"
            contextId="org.eclipse.ui.contexts.window"
            sequence="CTRL+f"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:com.basf.xpview.File?before=com.basf.xpview.Preferences">
         <command
               commandId="com.basf.xpview.model.commands.ImportFileHandler"
               icon="icons/document.png"
               label="Open">
         </command>
         <separator
               name="com.basf.xpview.model.separator1"
               visible="true">
         </separator>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.basf.xpview.model.MainToolbar">
            <command
                  commandId="com.basf.xpview.model.commands.ImportFileHandler"
                  icon="icons/document.png"
                  id="com.basf.xpview.model.toolbars.ImportFileHandler"
                  label="Import file"
                  tooltip="Read a XMpLant file">
            </command>
            <command
                  commandId="com.basf.xpview.model.commands.ExcelReportHandler"
                  icon="icons/table-export.png"
                  id="com.basf.xpview.model.handlers.ExcelReportHandler"
                  label="Excel Export"
                  tooltip="Export attribute to Excel">
            </command>
            <separator
                  name="com.basf.xpview.model.separator2"
                  visible="true">
            </separator>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.basf.xpview.model.prefs.PrefsDefaults">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.basf.xpview.model.prefs.PrefsPageImport"
            id="PrefsPageImport"
            name="Import">
      </page>
      <page
            category="PrefsPageImport"
            class="com.basf.xpview.model.prefs.PrefsPageImportAVEVA"
            id="PrefsPageImportAVEVA"
            name="AVEVA import">
      </page>
      <page
            category="PrefsPageImport"
            class="com.basf.xpview.model.prefs.PrefsPageImportAutoDesk"
            id="PrefsPageImportAutoDesk"
            name="AutoDesk import">
      </page>
      <page
            category="PrefsPageImport"
            class="com.basf.xpview.model.prefs.PrefsPageImportSiemens"
            id="PrefsPageImportSiemens"
            name="Siemens import">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.basf.xpview.perspective">
         <view
               closeable="false"
               id="com.basf.xpview.model.issues.IssueTrackerView"
               minimized="false"
               moveable="true"
               relationship="stack"
               relative="com.basf.xpview.ui.MessageView"
               showTitle="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="com.basf.xpview.model.issues.IssueTrackerView"
            icon="icons/error.png"
            id="com.basf.xpview.model.issues.IssueTrackerView"
            name="IssueTracker"
            restorable="true">
      </view>
   </extension>

</plugin>
